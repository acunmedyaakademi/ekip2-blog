@{
    ViewData["Title"] = "Giriş Yap.";
}

<div class="nk-main active" id="nk-main" data-transition-speed="500" data-transition-in="bottom" data-transition-out="right">
    <div class="nano">
        <div class="nano-content">
            <div class="nk-vertical-top">
                <div>
                    <h3 class="text-main">Giriş Yap</h3>
                    <form asp-action="index" asp-controller="login" class="nk-form">
                        <input type="email" class="form-control" name="email" placeholder="Email">
                        <input type="password" class="form-control" name="password" placeholder="Şifre">
                        <p>@ViewBag.MailConfirmed</p>
                        <button class="nk-form-btn text-main">Giriş Yap</button>
                    </form>
                    <button style="margin-top:10vh;" class="nk-form-btn text-main"> <a href="/login/forgotpassword"> Şifremi Unuttum</a> </button>
                    <div class="nk-gap-2"></div>
                </div>
            </div>
        </div>
    </div>
</div>